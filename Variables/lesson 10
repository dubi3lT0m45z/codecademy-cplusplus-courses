#include <iostream>

int main() {
  // Add your code below  
  double weight;

  std::cout << "Tell me the weight of your item: \n";
  std::cin >> weight;

  double weightOnMars = (weight/9.81)*3.711;

  std::cout << "This item would weight on mars about " << weightOnMars << "\n";

  return 0;
}

