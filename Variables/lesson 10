#include <iostream>

int main() {
  // Add your code below  
  double mdis;

  std::cout << "Tell me the distance in miles: \n";
  std::cin >> mdis;

  double kmdis = mdis*1.609344;

  std::cout << "This distance in kilometers would be about " << kmdis << " km\n";

  return 0;
}
